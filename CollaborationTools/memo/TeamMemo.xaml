<UserControl x:Class="CollaborationTools.memo.TeamMemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CollaborationTools.memo"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        
        <Button Grid.Row="0" Width="40" Height="40" Margin="0,0,0,8"
                Padding="0" HorizontalAlignment="Left"
                materialDesign:ButtonAssist.CornerRadius="20"
                ToolTip="메모 추가">
            <materialDesign:PackIcon Kind="Plus" Width="24" Height="24"
                                     HorizontalAlignment="Center"/>
        </Button>
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ItemsControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- 정사각형 카드 -->
                        <Border Width="200" Height="200" Margin="8"
                                Background="{DynamicResource MaterialDesignPaper}"
                                CornerRadius="12"
                                Padding="12"
                                Effect="{DynamicResource MaterialDesignElevationShadow2}"
                                MouseLeftButtonDown="MemoDoubleClicked">
                            <StackPanel>
                                <TextBlock Text="{Binding Title}"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           TextTrimming="CharacterEllipsis"
                                           Margin="0,0,0,4"/>
                                <TextBlock Text="{Binding LastModifiedDate, StringFormat='yyyy-MM-dd HH:mm'}"
                                           FontSize="12"
                                           Foreground="Gray"
                                           Margin="0,0,0,8"/>
                                <TextBlock Text="{Binding LastEditorName}"
                                           FontSize="12"
                                           Foreground="Gray"
                                           Margin="0,0,0,8"/>
                                <TextBlock Text="{Binding Content}"
                                           TextWrapping="Wrap"
                                           TextTrimming="CharacterEllipsis"
                                           FontSize="14"
                                           VerticalAlignment="Top"
                                           Height="80"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
