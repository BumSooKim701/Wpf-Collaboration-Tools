<Window x:Class="CollaborationTools.memo.MemoCreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:calendar="clr-namespace:CollaborationTools.calendar"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="ScheduleDetailsDialog" Height="450" Width="450" MinHeight="300" MinWidth="400"
        WindowStyle="None" ResizeMode="CanResizeWithGrip" MouseDown="Window_MouseDown"
        AllowsTransparency="True" Background="Transparent">

    <materialDesign:Card Margin="0" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" >
                <Label Content="제목"></Label>
                <TextBox Text="{Binding Title}"
                         AcceptsReturn="False"
                         Margin="0, 5"
                         Style="{StaticResource MaterialDesignTextBox}"
                         FontSize="20" />
            </StackPanel>
            
            <TextBox Grid.Row="1"
                     Text="{Binding Content}"
                     TextWrapping="Wrap"
                     Margin="0,5"
                     VerticalScrollBarVisibility="Auto"
                     VerticalContentAlignment="Top"
                     Style="{StaticResource MaterialDesignFilledTextBox}"
                     FontSize="15"/>
            
            <StackPanel Grid.Row="2" Margin="0,10" Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button Content="저장"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Click="SaveButton_Click" />
                <Button Content="취소"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Click="CloseButton_Click" />
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</Window>