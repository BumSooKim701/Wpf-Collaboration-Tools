<Window x:Class="CollaborationTools.meeting_schedule.MeetingArrangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="ScheduleDetailsDialog" Height="450" Width="450" MinHeight="300" MinWidth="400"
        WindowStyle="None" ResizeMode="CanResizeWithGrip" MouseDown="Window_MouseDown"
        AllowsTransparency="True" Background="Transparent">

    <materialDesign:Card Margin="0" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="미팅 일정 조율"
                       Margin="0, 5"
                       FontSize="20" FontWeight="Bold" />

            <StackPanel Grid.Row="1">
                <Label Content="주제" Margin="0,5" />
                <TextBox Text="{Binding Title}"
                         AcceptsReturn="False"
                         Margin="0, 5"
                         Style="{StaticResource MaterialDesignTextBox}"
                         FontSize="20" />
            </StackPanel>

            <Label Grid.Row="2" Margin="0,5,0,0" Content="회의 할 내용" />
            <TextBox Grid.Row="3"
                     Text="{Binding ToDo}"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Margin="0,5"
                     VerticalScrollBarVisibility="Auto"
                     VerticalContentAlignment="Top"
                     Style="{StaticResource MaterialDesignFilledTextBox}"
                     FontSize="15" />

            <StackPanel Grid.Row="4" Margin="0,10" Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button Content="등록"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Click="RegisterButton_Click" />
                <Button Content="취소"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Click="CloseButton_Click" />
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</Window>