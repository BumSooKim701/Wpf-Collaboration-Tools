<Window x:Class="CollaborationTools.profile.UserProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             MinWidth="600">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <materialDesign:Card Grid.Row="0" 
                            Background="{DynamicResource MaterialDesign.Brush.Primary}"
                            Margin="10,10,10,5"
                            materialDesign:ElevationAssist.Elevation="Dp2">
            <Grid Margin="20">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Account" 
                                           Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}"
                                           Width="24" Height="24" 
                                           VerticalAlignment="Center"/>
                    <TextBlock Text="내 프로필" 
                              Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}"
                              FontSize="18" FontWeight="Bold" 
                              Margin="10,0,0,0" 
                              VerticalAlignment="Center"
                              Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
        
        <!-- Profile Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10,5,10,10">
                
                <!-- Profile Picture and Basic Info -->
                <materialDesign:Card Margin="0,0,0,10" 
                                    materialDesign:ElevationAssist.Elevation="Dp2">
                    <Grid Margin="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Profile Picture -->
                        <Border Grid.Column="0" 
                               Width="80" Height="80" 
                               CornerRadius="40" 
                               Margin="0,0,20,0">
                            <Border.Background>
                                <ImageBrush x:Name="ProfileImageBrush" 
                                          ImageSource="{Binding ProfileImageSource}"
                                          Stretch="UniformToFill"/>
                            </Border.Background>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ProfileImageSource}" Value="{x:Null}">
                                            <Setter Property="Background" Value="{DynamicResource MaterialDesign.Brush.Primary}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            
                            <!-- Default Icon when no image -->
                            <materialDesign:PackIcon Kind="Account" 
                                                   Width="40" Height="40"
                                                   Foreground="Gray"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center">
                                <materialDesign:PackIcon.Style>
                                    <Style TargetType="materialDesign:PackIcon">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ProfileImageSource}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </materialDesign:PackIcon.Style>
                            </materialDesign:PackIcon>
                        </Border>
                        
                        <!-- Basic Info -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding UserName}" 
                                      FontSize="20" FontWeight="Bold"
                                      Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                            <TextBlock Text="{Binding UserEmail}" 
                                      FontSize="14" 
                                      Foreground="{DynamicResource MaterialDesign.Brush.Foreground}"
                                      Opacity="0.7"
                                      Margin="0,5,0,0"
                                      Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <materialDesign:PackIcon Kind="Google" 
                                                       Width="16" Height="16"
                                                       Foreground="{DynamicResource MaterialDesign.Brush.Primary}"
                                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Google 계정 연동됨" 
                                          FontSize="12"
                                          Foreground="{DynamicResource MaterialDesign.Brush.Primary}"
                                          Margin="5,0,0,0"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <!-- Created Date -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="가입일:" 
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="{Binding CreatedAt}" 
                                           VerticalAlignment="Center"/>
                            </Grid>
                        
                            <!-- Last Login -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="마지막 로그인:" 
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="{Binding LastLoginAt}" 
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>
                
                
                <!-- Statistics -->
                <materialDesign:Card Margin="0,0,0,10" 
                                    materialDesign:ElevationAssist.Elevation="Dp2">
                    <StackPanel Margin="20">
                        <TextBlock Text="활동 통계" 
                                  FontSize="16" FontWeight="Bold"
                                  Margin="0,0,0,15"
                                  Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Memo Count -->
                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="Note" 
                                                       Width="24" Height="24"
                                                       Foreground="{DynamicResource MaterialDesign.Brush.Primary}"
                                                       HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding MemoCount}" 
                                          FontSize="18" FontWeight="Bold"
                                          HorizontalAlignment="Center"
                                          Margin="0,5,0,0"/>
                                <TextBlock Text="작성한 메모" 
                                          FontSize="12"
                                          HorizontalAlignment="Center"
                                          Opacity="0.7"/>
                            </StackPanel>
                            
                            <!-- File Count -->
                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="File" 
                                                       Width="24" Height="24"
                                                       Foreground="{DynamicResource MaterialDesign.Brush.Primary}"
                                                       HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding FileCount}" 
                                          FontSize="18" FontWeight="Bold"
                                          HorizontalAlignment="Center"
                                          Margin="0,5,0,0"/>
                                <TextBlock Text="업로드한 파일" 
                                          FontSize="12"
                                          HorizontalAlignment="Center"
                                          Opacity="0.7"/>
                            </StackPanel>
                            
                            <!-- Schedule Count -->
                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="Calendar" 
                                                       Width="24" Height="24"
                                                       Foreground="{DynamicResource MaterialDesign.Brush.Primary}"
                                                       HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding ScheduleCount}" 
                                          FontSize="18" FontWeight="Bold"
                                          HorizontalAlignment="Center"
                                          Margin="0,5,0,0"/>
                                <TextBlock Text="등록한 일정" 
                                          FontSize="12"
                                          HorizontalAlignment="Center"
                                          Opacity="0.7"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>
                
                <!-- Action Buttons -->
                <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp2">
                    <StackPanel Margin="20">
                        <TextBlock Text="계정 관리" 
                                  FontSize="16" FontWeight="Bold"
                                  Margin="0,0,0,15"
                                  Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                   Click="RefreshProfile_Click"
                                   Margin="0,0,10,0">
                                
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Refresh" 
                                                               Width="16" Height="16"
                                                               VerticalAlignment="Center"/>
                                        <TextBlock Text="프로필 새로고침" 
                                                  Margin="5,0,0,0"
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            
                            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                   Click="Logout_Click"
                                   Margin="10,0,0,0">
                                
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Logout" 
                                                               Width="16" Height="16"
                                                               VerticalAlignment="Center"/>
                                        <TextBlock Text="로그아웃" 
                                                  Margin="5,0,0,0"
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>

