<Page x:Class="CollaborationTools.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:CollaborationTools"
      mc:Ignorable="d"
      Title="MainPage" Height="Auto" Width="Auto">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <DockPanel>
            <local:SideBar x:Name="SideBar" DockPanel.Dock="Left" />

            <local:MenuBar x:Name="MenuBar" DockPanel.Dock="Top" />

            <Frame x:Name="MainFrame" />
        </DockPanel>
    </Grid>
</Page>