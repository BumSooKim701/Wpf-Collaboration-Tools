<Window x:Class="CollaborationTools.calendar.ScheduleAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:CollaborationTools.calendar"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="ScheduleDetailsDialog" Height="450" Width="400"
        WindowStyle="None" ResizeMode="NoResize" 
        AllowsTransparency="True" Background="Transparent">
    <Window.Resources>
        <Style x:Key="TextBlockStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
    </Window.Resources>
    
    <materialDesign:Card Margin="20" Padding="20">
        <DockPanel>
            <Grid DockPanel.Dock="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Row="0" Grid.Column="0" Text="일정명" Style="{StaticResource TextBlockStyle}"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Title}"/>
                <TextBlock Grid.Row="1" Grid.Column="0" Text="시작 날짜" Style="{StaticResource TextBlockStyle}"/>
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                    <DatePicker
                        HorizontalAlignment="Left"
                        Width="100"
                        Margin="10,0"
                        materialDesign:HintAssist.Hint="Pick Date"
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                    />
                    <materialDesign:TimePicker 
                        Width="100"
                        Margin="10,0"
                        materialDesign:HintAssist.Hint="Custom hint"
                        Style="{StaticResource MaterialDesignFloatingHintTimePicker}"
                    />
                </StackPanel>
                
                <TextBlock Grid.Row="2" Grid.Column="0" Text="종료 날짜" Style="{StaticResource TextBlockStyle}"/>
                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                    <DatePicker
                        HorizontalAlignment="Left"
                        Width="100"
                        Margin="10,0"
                        materialDesign:HintAssist.Hint="Pick Date"
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                    />
                    <materialDesign:TimePicker 
                        Width="100"
                        Margin="10,0"
                        materialDesign:HintAssist.Hint="Custom hint"
                        Style="{StaticResource MaterialDesignFloatingHintTimePicker}"
                    />
                </StackPanel>
                <TextBlock Grid.Row="3" Grid.Column="0" Text="장소" Style="{StaticResource TextBlockStyle}"/>
                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Location}"/>
                <TextBlock Grid.Row="4" Grid.Column="0" Text="메모" Style="{StaticResource TextBlockStyle}"/>
                <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Description}"/>

            </Grid>
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="저장"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Click="SaveButton_Click" />
                <Button Content="취소"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Click="CloseButton_Click" />
            </StackPanel>
        </DockPanel>
    </materialDesign:Card>
</Window>
