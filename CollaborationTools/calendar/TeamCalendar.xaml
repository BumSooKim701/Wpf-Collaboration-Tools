<UserControl x:Class="CollaborationTools.calendar.TeamCalendar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CollaborationTools"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:smtx="clr-namespace:ShowMeTheXAML;assembly=ShowMeTheXAML"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Calendar Grid.Row="0" Language="ko-KR"
                      x:Name="Calendar"
                      SelectedDatesChanged="CalendarDateChanged"/>

            <TextBlock Grid.Row="1" x:Name="NoScheduleMsgCalendar" Text="예정된 일정이 없습니다" Visibility="Hidden"
                       FontSize="20" FontWeight="Medium" Margin="10" HorizontalAlignment="Center" />
            <ListView Grid.Row="1" x:Name="CardListViewCalendar"
                      Width="300"
                      MouseDoubleClick="ListView_MouseDoubleClick"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <materialDesign:Card
                            Height="50"
                            Background="{DynamicResource MaterialDesign.Brush.Primary}"
                            Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}">
                            <DockPanel>
                                <TextBlock
                                    x:Name="title"
                                    DockPanel.Dock="Left"
                                    VerticalAlignment="Center"
                                    Margin="10"
                                    Style="{StaticResource MaterialDesignBody1TextBlock}"
                                    Text="{Binding Title}" 
                                    TextTrimming="CharacterEllipsis"/>
                            </DockPanel>
                        </materialDesign:Card>
                    </DataTemplate>
                </ListView.ItemTemplate>

                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
        </Grid>

        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="다가오는 일정" FontSize="25" FontWeight="Bold" Margin="10" />

            <TextBlock Grid.Row="1" x:Name="NoScheduleMsg" Text="예정된 일정이 없습니다" Visibility="Hidden" FontSize="20"
                       FontWeight="SemiBold" Margin="10" HorizontalAlignment="Center" />

            <ListView Grid.Row="1" x:Name="CardListView"
                      MouseDoubleClick="ListView_MouseDoubleClick"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <materialDesign:Card
                            Height="50"
                            Background="{DynamicResource MaterialDesign.Brush.Primary}"
                            Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}">
                            <DockPanel>
                                <TextBlock
                                    x:Name="date"
                                    DockPanel.Dock="Right"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right"
                                    Margin="10"
                                    Style="{StaticResource MaterialDesignBody2TextBlock}"
                                    Text="{Binding Date}" />
                                
                                <TextBlock
                                    x:Name="title"
                                    DockPanel.Dock="Left"
                                    VerticalAlignment="Center"
                                    Margin="10"
                                    Style="{StaticResource MaterialDesignBody1TextBlock}"
                                    Text="{Binding Title}" 
                                    TextTrimming="CharacterEllipsis"/>
                            </DockPanel>
                        </materialDesign:Card>
                    </DataTemplate>
                </ListView.ItemTemplate>

                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
        </Grid>
    </Grid>

</UserControl>