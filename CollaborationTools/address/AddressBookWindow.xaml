<Window x:Class="CollaborationTools.address.AddressBookWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600">
    
    <Window.Resources>
        <!-- Address Item Card Template -->
        <DataTemplate x:Key="AddressCardTemplate">
            <materialDesign:Card Height="80" 
                                Background="{DynamicResource MaterialDesign.Brush.Card.Background}" 
                                Margin="5" 
                                materialDesign:ElevationAssist.Elevation="Dp2">
                <Grid Cursor="Hand">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Profile Picture -->
                    <Border Grid.Column="0" 
                            Width="50" Height="50" 
                            CornerRadius="25" 
                            Margin="15,0"
                            VerticalAlignment="Center">
                        <Border.Background>
                            <ImageBrush ImageSource="{Binding PictureUri}" 
                                       Stretch="UniformToFill"/>
                        </Border.Background>
                        <!-- Fallback Icon if no picture -->
                        <materialDesign:PackIcon Kind="Account" 
                                               Width="30" Height="30" 
                                               Foreground="{DynamicResource MaterialDesign.Brush.Primary}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                    </Border>
                    
                    <!-- User Details -->
                    <StackPanel Grid.Column="1" 
                               VerticalAlignment="Center" 
                               Margin="10,0">
                        <TextBlock Text="{Binding Name}" 
                                  FontWeight="Medium" 
                                  FontSize="16" 
                                  Style="{StaticResource MaterialDesignBody1TextBlock}"
                                  TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding Email}" 
                                  Foreground="{DynamicResource MaterialDesign.Brush.Foreground}" 
                                  Opacity="0.7"
                                  FontSize="14" 
                                  Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                  TextTrimming="CharacterEllipsis"/>
                    </StackPanel>
                    
                    <!-- Copy Email Button -->
                    <Button Grid.Column="2" 
                           Style="{StaticResource MaterialDesignIconButton}"
                           Click="CopyEmailClick"
                           CommandParameter="{Binding}"
                           ToolTip="이메일 복사"
                           Margin="5,0">
                        <materialDesign:PackIcon Kind="ContentCopy" 
                                               Width="18" Height="18"/>
                    </Button>
                    
                    <!-- Remove Button -->
                    <Button Grid.Column="3" 
                           Style="{StaticResource MaterialDesignIconButton}"
                           Click="RemoveAddressClick"
                           CommandParameter="{Binding}"
                           ToolTip="주소록에서 제거"
                           Margin="5,0,15,0">
                        <materialDesign:PackIcon Kind="Delete" 
                                               Width="18" Height="18"
                                               Foreground="{DynamicResource MaterialDesign.Brush.Validation.Error}"/>
                    </Button>
                </Grid>
            </materialDesign:Card>
        </DataTemplate>
        
        <!-- No Address Message Style -->
        <Style x:Key="NoAddressMessageStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Visibility" Value="Hidden"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesign.Brush.Foreground}"/>
            <Setter Property="Opacity" Value="0.6"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <materialDesign:Card Grid.Row="0" 
                            Background="{DynamicResource MaterialDesign.Brush.Primary}" 
                            Margin="10,10,10,5"
                            materialDesign:ElevationAssist.Elevation="Dp2">
            <Grid Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Contacts" 
                                           Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}"
                                           Width="24" Height="24" 
                                           VerticalAlignment="Center"/>
                    <TextBlock Text="개인 주소록" 
                              Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}"
                              FontSize="18" 
                              FontWeight="Bold"
                              Margin="10,0,0,0" 
                              VerticalAlignment="Center"
                              Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                </StackPanel>
                
                <Button Grid.Column="1" 
                       Style="{StaticResource MaterialDesignIconButton}"
                       Click="AddAddressClick"
                       ToolTip="주소 추가">
                    <materialDesign:PackIcon Kind="Plus" 
                                           Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}"
                                           Width="20" Height="20"/>
                </Button>
            </Grid>
        </materialDesign:Card>
        
        <!-- Search Bar -->
        <materialDesign:Card Grid.Row="1" 
                            Margin="10,5,10,5"
                            materialDesign:ElevationAssist.Elevation="Dp1">
            <Grid Margin="15,10">
                <TextBox x:Name="SearchTextBox"
                        materialDesign:HintAssist.Hint="이름 또는 이메일로 검색..."
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        TextChanged="SearchTextBox_TextChanged"
                        FontSize="14"/>
                <materialDesign:PackIcon Kind="Magnify" 
                                       Width="20" Height="20"
                                       Foreground="{DynamicResource MaterialDesign.Brush.Foreground}"
                                       Opacity="0.6"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
            </Grid>
        </materialDesign:Card>
        
        <!-- Address List -->
        <Grid Grid.Row="2" Margin="10,5,10,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- No Address Message -->
                    <TextBlock x:Name="NoAddressMessage"
                              Text="주소록이 비어있습니다.&#x0a;+ 버튼을 눌러 주소를 추가해보세요."
                              Style="{StaticResource NoAddressMessageStyle}"/>
                    
                    <!-- Address List -->
                    <ItemsControl x:Name="AddressListControl"
                                 ItemTemplate="{StaticResource AddressCardTemplate}"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
