<Window x:Class="CollaborationTools.address.AddAddressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="주소 추가"
        Height="500" Width="600"
        MinHeight="400" MinWidth="500"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        MouseDown="Window_MouseDown"
        AllowsTransparency="True"
        Background="Transparent">
    
    <materialDesign:Card Margin="0" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <DockPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock DockPanel.Dock="Left"
                          Text="주소 추가"
                          FontSize="20"
                          FontWeight="Bold"
                          VerticalAlignment="Center"/>
                <Button DockPanel.Dock="Right"
                       Style="{StaticResource MaterialDesignIconButton}"
                       Click="CloseButton_Click"
                       HorizontalAlignment="Right">
                    <materialDesign:PackIcon Kind="Close" Width="20" Height="20"/>
                </Button>
            </DockPanel>
            
            <!-- Search Bar -->
            <materialDesign:Card Grid.Row="1" 
                                Margin="0,0,0,15"
                                materialDesign:ElevationAssist.Elevation="Dp1">
                <Grid Margin="15,10">
                    <TextBox x:Name="UserSearchTextBox"
                            materialDesign:HintAssist.Hint="사용자 이름 또는 이메일로 검색..."
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            TextChanged="UserSearchTextBox_TextChanged"
                            FontSize="14"/>
                    <materialDesign:PackIcon Kind="Magnify" 
                                           Width="20" Height="20"
                                           Foreground="{DynamicResource MaterialDesign.Brush.Foreground}"
                                           Opacity="0.6"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0"/>
                </Grid>
            </materialDesign:Card>
            
            <!-- User List -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="UserListControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <materialDesign:Card Height="70" 
                                                Margin="0,2"
                                                materialDesign:ElevationAssist.Elevation="Dp1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Profile Picture -->
                                    <Border Grid.Column="0" 
                                            Width="40" Height="40" 
                                            CornerRadius="20" 
                                            Margin="15,0"
                                            VerticalAlignment="Center">
                                        <Border.Background>
                                            <ImageBrush ImageSource="{Binding PictureUri}" 
                                                       Stretch="UniformToFill"/>
                                        </Border.Background>
                                        <materialDesign:PackIcon Kind="Account" 
                                                               Width="25" Height="25" 
                                                               Foreground="{DynamicResource MaterialDesign.Brush.Primary}"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                    </Border>
                                    
                                    <!-- User Details -->
                                    <StackPanel Grid.Column="1" 
                                               VerticalAlignment="Center" 
                                               Margin="10,0">
                                        <TextBlock Text="{Binding Name}" 
                                                  FontWeight="Medium" 
                                                  FontSize="14"/>
                                        <TextBlock Text="{Binding Email}" 
                                                  Foreground="{DynamicResource MaterialDesign.Brush.Foreground}" 
                                                  Opacity="0.7"
                                                  FontSize="12"/>
                                    </StackPanel>
                                    
                                    <!-- Add Button -->
                                    <Button Grid.Column="2" 
                                           Style="{StaticResource MaterialDesignRaisedButton}"
                                           Content="추가"
                                           Click="AddUserClick"
                                           CommandParameter="{Binding}"
                                           Margin="10"
                                           Height="30"/>
                                </Grid>
                            </materialDesign:Card>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            
            <!-- Footer Buttons -->
            <StackPanel Grid.Row="3" 
                       Margin="0,20,0,0" 
                       Orientation="Horizontal"
                       HorizontalAlignment="Right">
                <Button Content="닫기" 
                       Style="{StaticResource MaterialDesignFlatButton}"
                       Click="CloseButton_Click"
                       Margin="5,0"/>
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</Window>