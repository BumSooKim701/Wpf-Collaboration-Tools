<Page x:Class="CollaborationTools.google_login.GoogleLoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:CollaborationTools.google_login"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      Title="GoogleLoginPage" Height="Auto" Width="Auto">
    
    <Grid>
        <Button
            x:Name="LoginButton"
            Click="LoginButton_Click"
            Width="300"
            Height="56"
            Margin="0,40,0,80"
            materialDesign:ButtonAssist.CornerRadius="16"
            Background="{DynamicResource MaterialDesign.Brush.Primary}"
            BorderThickness="0"
            Foreground="{DynamicResource PrimaryHueMidBrushForeground}">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon
                    Width="24"
                    Height="24"
                    Kind="Google" />
                <TextBlock Text="Google 계정으로 로그인" FontSize="20" Margin="10,0" />
            </StackPanel>
        </Button>
    </Grid>
</Page>
